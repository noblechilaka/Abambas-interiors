    <script src="/js/script.js"></script>
    <script src="/js/animations.js"></script>
    <script>
      // Architectural Manifesto - About Page Specific Animations
      document.addEventListener("DOMContentLoaded", function () {
        gsap.registerPlugin(ScrollTrigger);

        // 1. Manifesto Header - Slow Masked Reveal
        const manifestoMask = document.querySelector(".manifesto-mask");
        const manifestoContent = document.querySelector(".manifesto-content");
        const manifestoHeadline = document.querySelector(".manifesto-headline");
        const manifestoSubheadline = document.querySelector(".manifesto-subheadline");

        if (manifestoMask) {
          // Initial masked state
          gsap.set(manifestoMask, {
            clipPath: "polygon(0% 100%, 100% 100%, 100% 100%, 0% 100%)",
          });

          // Reveal animation
          gsap.to(manifestoMask, {
            clipPath: "polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)",
            duration: 2,
            ease: "power4.out",
            delay: 0.3,
          });
        }

        if (manifestoContent) {
          gsap.set(manifestoContent, { opacity: 0, y: 80 });
          gsap.to(manifestoContent, {
            opacity: 1,
            y: 0,
            duration: 1.5,
            ease: "power3.out",
            delay: 1,
          });
        }

        // Stagger reveal headline and subheadline
        if (manifestoHeadline && manifestoSubheadline) {
          gsap.fromTo(
            [manifestoHeadline, manifestoSubheadline],
            { y: 100, opacity: 0 },
            {
              y: 0,
              opacity: 1,
              duration: 1.2,
              stagger: 0.2,
              ease: "power3.out",
              delay: 0.8,
            }
          );
        }

        // 2. Visionary Section - Parallax Effect
        const visionaryPortrait = document.querySelector(".visionary-portrait");
        const foundersNote = document.querySelector(".founders-note");

        if (visionaryPortrait && foundersNote) {
          // Image slides up faster than text (parallax)
          gsap.to(visionaryPortrait, {
            yPercent: 20,
            ease: "none",
            scrollTrigger: {
              trigger: ".visionary-section",
              start: "top bottom",
              end: "bottom top",
              scrub: true,
            },
          });

          // Text moves slower
          gsap.to(foundersNote, {
            yPercent: -10,
            ease: "none",
            scrollTrigger: {
              trigger: ".visionary-section",
              start: "top bottom",
              end: "bottom top",
              scrub: true,
            },
          });
        }

        // 3. Visionary Section - Reveal Animation
        const visionaryPortraitWrapper = document.querySelector(
          ".visionary-portrait-wrapper"
        );
        const foundersNoteContent = document.querySelector(".founders-note");

        if (visionaryPortraitWrapper) {
          gsap.fromTo(
            visionaryPortraitWrapper,
            { y: 60, opacity: 0 },
            {
              y: 0,
              opacity: 1,
              duration: 1,
              ease: "power3.out",
              scrollTrigger: {
                trigger: ".visionary-section",
                start: "top 70%",
              },
            }
          );
        }

        if (foundersNoteContent) {
          gsap.fromTo(
            foundersNoteContent,
            { y: 40, opacity: 0 },
            {
              y: 0,
              opacity: 1,
              duration: 1,
              delay: 0.2,
              ease: "power3.out",
              scrollTrigger: {
                trigger: ".visionary-section",
                start: "top 70%",
              },
            }
          );
        }

        // 4. Method Section - Triple Grid Reveal
        const methodColumns = document.querySelectorAll(".method-column");

        methodColumns.forEach((column, index) => {
          const methodNumber = column.querySelector(".method-number");
          const methodTitle = column.querySelector(".method-title");
          const methodDesc = column.querySelector(".method-description");
          const methodCta = column.querySelector(".method-cta");

          gsap.fromTo(
            [methodNumber, methodTitle, methodDesc, methodCta],
            { y: 40, opacity: 0 },
            {
              y: 0,
              opacity: 1,
              duration: 0.8,
              stagger: 0.1,
              delay: index * 0.1,
              ease: "power3.out",
              scrollTrigger: {
                trigger: column,
                start: "top 75%",
              },
            }
          );
        });

        // 5. Studio Section - Reverse Monolith Reveal
        const studioContent = document.querySelector(".studio-content");
        const studioImageWrapper = document.querySelector(".studio-image-wrapper");

        if (studioContent) {
          gsap.fromTo(
            studioContent,
            { y: 50, opacity: 0 },
            {
              y: 0,
              opacity: 1,
              duration: 1,
              ease: "power3.out",
              scrollTrigger: {
                trigger: ".studio-section",
                start: "top 70%",
              },
            }
          );
        }

        if (studioImageWrapper) {
          gsap.fromTo(
            studioImageWrapper,
            { y: 60, opacity: 0 },
            {
              y: 0,
              opacity: 1,
              duration: 1,
              delay: 0.2,
              ease: "power3.out",
              scrollTrigger: {
                trigger: ".studio-section",
                start: "top 70%",
              },
            }
          );
        }

        // 6. Sensory Archive - Slow Scale Hover Effect
        const textureFrames = document.querySelectorAll(".texture-frame");

        textureFrames.forEach((frame) => {
          const textureImage = frame.querySelector(".texture-image");

          frame.addEventListener("mouseenter", () => {
            gsap.to(textureImage, {
              scale: 1.12,
              duration: 1.2,
              ease: "power2.out",
            });
          });

          frame.addEventListener("mouseleave", () => {
            gsap.to(textureImage, {
              scale: 1,
              duration: 1,
              ease: "power2.out",
            });
          });
        });

        // Sensory Archive Grid Reveal
        const textureGrid = document.querySelector(".texture-grid");

        if (textureGrid) {
          gsap.fromTo(
            textureFrames,
            { y: 50, opacity: 0 },
            {
              y: 0,
              opacity: 1,
              duration: 0.8,
              stagger: 0.15,
              ease: "power3.out",
              scrollTrigger: {
                trigger: ".sensory-archive-section",
                start: "top 70%",
              },
            }
          );
        }

        // 7. Connection Footer - Portal Reveal
        const connectionContent = document.querySelector(".connection-content");

        if (connectionContent) {
          gsap.fromTo(
            connectionContent,
            { y: 40, opacity: 0 },
            {
              y: 0,
              opacity: 1,
              duration: 1,
              ease: "power3.out",
              scrollTrigger: {
                trigger: ".connection-footer",
                start: "top 75%",
              },
            }
          );
        }

        // Micro-Circle CTA Expand Animation
        const microCircleCtas = document.querySelectorAll(".micro-circle-cta");

        microCircleCtas.forEach((cta) => {
          const circle = cta.querySelector(".micro-circle");

          cta.addEventListener("mouseenter", () => {
            gsap.to(circle, {
              width: 36,
              height: 36,
              duration: 0.4,
              ease: "power2.out",
            });
            gsap.to(circle.querySelector("svg"), {
              scale: 1.2,
              duration: 0.4,
              ease: "power2.out",
            });
          });

          cta.addEventListener("mouseleave", () => {
            gsap.to(circle, {
              width: 28,
              height: 28,
              duration: 0.4,
              ease: "power2.out",
            });
            gsap.to(circle.querySelector("svg"), {
              scale: 1,
              duration: 0.4,
              ease: "power2.out",
            });
          });
        });

        // Portal CTA Hover Effect
        const portalCtas = document.querySelectorAll(".portal-cta, .portal-cta-large");

        portalCtas.forEach((cta) => {
          const circle = cta.querySelector(".portal-circle-large");

          cta.addEventListener("mouseenter", () => {
            gsap.to(circle, {
              x: 8,
              duration: 0.4,
              ease: "power2.out",
            });
          });

          cta.addEventListener("mouseleave", () => {
            gsap.to(circle, {
              x: 0,
              duration: 0.4,
              ease: "power2.out",
            });
          });
        });

        // Magnetic Portal for Connection Footer
        const magneticPortal = document.querySelector(".connection-cta");
        if (magneticPortal) {
          const circle = magneticPortal.querySelector(".portal-circle-large");
          let isHovering = false;
          let mouseX = 0;
          let mouseY = 0;

          document.addEventListener("mousemove", (e) => {
            mouseX = e.clientX;
            mouseY = e.clientY;
          });

          magneticPortal.addEventListener("mouseenter", () => {
            isHovering = true;
          });
          magneticPortal.addEventListener("mouseleave", () => {
            isHovering = false;
            gsap.to(circle, { x: 0, y: 0, duration: 0.5, ease: "power2.out" });
          });

          function animateMagnetic() {
            if (isHovering && circle) {
              const rect = circle.getBoundingClientRect();
              const circleX = rect.left + rect.width / 2;
              const circleY = rect.top + rect.height / 2;
              const dx = mouseX - circleX;
              const dy = mouseY - circleY;
              const distance = Math.sqrt(dx * dx + dy * dy);

              if (distance < 100) {
                const pull = (100 - distance) / 100;
                gsap.to(circle, {
                  x: dx * pull * 0.3,
                  y: dy * pull * 0.3,
                  duration: 0.1,
                  ease: "power2.out",
                });
              }
            }
            requestAnimationFrame(animateMagnetic);
          }
          animateMagnetic();
        }
      });
    </script>
  </body>
</html></parameter>
